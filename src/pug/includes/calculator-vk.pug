section.calculator.calculator--vk.calculator--custom(data-type="vk")
	.site-container
		h2.text-center Узнай, что можешь получить за свои деньги

		.row.first-row
			.column.medium-4.small-12

				h5 Подписчики Вконтакте

				.calculator__pack-buttons
					+payButton('100 подписчиков в ВК', 1, '100шт. - 300₽')
					+payButton('200 подписчиков в ВК', 1000, '200шт. - 580₽')

			.column.medium-4.small-12

				h5 Лайки Вконтакте

				.calculator__pack-buttons
					+payButton('100 лайков в ВК', 5, '100шт. - 300₽')
					+payButton('200 лайков в ВК', 10, '200шт. - 580₽')


			.column.medium-4.small-12

				h5 Калькулятор

				.row
					.column.small-12

						.calculator__budget
							.captions
								.caption Ваш бюджет, руб.
								.price 30 000

							.slider.j-budget-slider(data-slider data-start="50" data-initial-start="500" data-end="5000" data-step="10")
								.slider-handle(data-slider-handle role="slider" tabindex="1")
								.slider-fill(data-slider-fill)

				.calculator__packs

					.calculator__result
						.name Подписчики
						.count 2000
						a(href="#").button.expanded Заказать

					.calculator__result
						.name Лайки
						.count 500
						a(href="#").button.expanded Заказать

