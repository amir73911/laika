					+payButton('лайков в Facebook', 20000, 25890)
					+payButton('лайков в Facebook', 50000, 60150)


			.column.medium-4.small-12

				h5 Калькулятор

				.row
					.column.small-12

						.calculator__budget(data-slider-type="fb")
							.captions
								.caption Ваш бюджет, руб.
								.price 30 000

							.slider.j-budget-slider(data-slider data-start="50" data-initial-start="500" data-end="60000" data-step="20")
								.slider-handle(data-slider-handle role="slider" tabindex="1")
								.slider-fill(data-slider-fill)

				.calculator__packs

					.calculator__result(data-pack-type="reposts")
						.name Поделиться
						.count 0
						a(href="#" data-caption="" data-sum="").button.expanded.j-order-btn Заказать

					.calculator__result(data-pack-type="likes")
						.name Лайки
						.count 0
						a(href="#" data-caption="" data-sum="").button.expanded.j-order-btn Заказать

