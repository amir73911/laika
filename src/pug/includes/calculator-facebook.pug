		.row.first-row
			.column.medium-4.small-12

				h5 Поделиться в Facebook

				.calculator__pack-buttons
					+payButton('поделиться в Facebook', 100, 300)
					+payButton('поделиться в Facebook', 200, 580)
					+payButton('поделиться в Facebook', 300, 850)
					+payButton('поделиться в Facebook', 400, 1100)
					+payButton('поделиться в Facebook', 500, 1340)
					+payButton('поделиться в Facebook', 600, 1560)
					+payButton('поделиться в Facebook', 700, 1760)
					+payButton('поделиться в Facebook', 800, 1940)
					+payButton('поделиться в Facebook', 1000, 2180)
					+payButton('поделиться в Facebook', 2000, 4000)
					+payButton('поделиться в Facebook', 4000, 6000)
					+payButton('поделиться в Facebook', 5000, 8000)
